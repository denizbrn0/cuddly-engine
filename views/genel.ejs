<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Genel Ayarlar</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item active">Genel</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- Default box -->
      <div class="row">
        <div class="col-md-6">
          <div class="card card-primary">
            <!-- form start -->
            <form method="post" action="/genel-ayarlar">
              <div class="card-body">
                <div class="form-group">
                  <label for="exampleInputEmail1">Mektup Kart Başlığı</label>
                  <input
                    type="text"
                    name="yaziBaslik"
                    class="form-control"
                    placeholder="<%= yaziBaslik %>"
                    value="<%= yaziBaslik %>"
                    maxlength="20"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Mektup Kart Açıklaması</label>
                  <input
                    type="text"
                    name="yaziAciklama"
                    class="form-control"
                    placeholder="<%= yaziAciklama %>"
                    value="<%= yaziAciklama %>"
                    maxlength="60"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="exampleInputPassword1">Galeri Başlığı</label>
                  <input
                    type="text"
                    name="galeriBaslik"
                    class="form-control"
                    placeholder="<%= galeriBaslik %>"
                    value="<%= galeriBaslik %>"
                    maxlength="20"
                    required
                  />
                </div>
                <div class="form-group">
                  <label for="exampleInputEmail1">Galeri Kart Açıklaması</label>
                  <input
                    type="text"
                    name="galeriAciklama"
                    class="form-control"
                    placeholder="<%= galeriAciklama %>"
                    value="<%= galeriAciklama %>"
                    maxlength="60"
                    required
                  />
                </div>
                <div class="form-check">
                  <input
                    type="checkbox"
                    class="form-check-input"
                    name="check"
                    value="0"
                    id="exampleCheck1"
                    required
                  />
                  <label class="form-check-label" for="exampleCheck1"
                    >Değişiklik yapmak istiyorum</label
                  >
                </div>
              </div>

              <!-- /.card-body -->

              <div class="card-footer">
                <button type="submit" class="btn btn-primary">Değiştir</button>
              </div>
            </form>
          </div>
        </div>
