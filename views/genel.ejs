            <form method="post" action="/genel-tarih">
              <div class="card-body">
                <div class="form-group">
                  <label for="exampleInputFile">Gerisayım Tarih Ayarı</label>
                  <div class="input-group">
                    <input type="date" name="tarih" value="<%= tarih %>" />
                    <input type="time" name="saat" value="<%= saat %>" />
