<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <section class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1>Galeri Ayarları</h1>
        </div>
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item active">Galeri</li>
          </ol>
        </div>
      </div>
    </div>
    <!-- /.container-fluid -->
  </section>

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <section class="content">
        <div class="row">
          <div class="col-12">
            <div class="card">
              <!-- /.card-header -->
              <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                  <thead>
                    <tr>
                      <th>ID</th>
                      <th>Fotoğraf</th>
                      <th>Fotoğraf Başlığı</th>
                      <th>Fotoğraf Seç</th>
                      <th>Değiştir</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% for(var i=0; i<resimler.length; i++){ %>
                    <form action="" method="post" enctype="multipart/form-data">
                        <tr>
                      <td><%= i+1 %></td>
                      <td>
                        <img
                          height="100"
                          src="<%= resimler[i] %>"
                          alt=""
                          srcset=""
                        />
                      </td>
                      <td>
                          <input type="text" name="baslik" value="<%= basliklar[i] %>" placeholder="<%= basliklar[i] %>"/>
                      </td>
                      <td>
                          <input type="file" name="resim" />
                          <br>
                          (Değiştirmek istemiyorsanız seçmeyiniz)
                      </td>
                      <td>
                        <input type="hidden" name="index" value="<%= i %>">
                        <button type="submit" class="btn btn-primary">
                            Submit
                          </button>
                      </td>
                    </form>
                    <% } %>
                  </tbody>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
        </div>
      </section>
    </div>
  </section>
</div>
